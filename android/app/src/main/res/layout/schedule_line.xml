<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="00:00"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/scheduleTimeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mondayView"
            app:layout_constraintBottom_toBottomOf="@+id/mondayView"
            app:layout_constraintEnd_toStartOf="@+id/mondayView"
            android:textSize="14sp" android:textAlignment="center" android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/mondayView"
            app:layout_constraintEnd_toStartOf="@+id/tuesdayView"
            android:layout_marginEnd="2dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/scheduleTimeText" android:layout_marginStart="2dp"
            android:layout_marginTop="2dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="2dp" android:background="@color/red"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tuesdayView"
            app:layout_constraintStart_toEndOf="@+id/mondayView" android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@+id/mondayView" app:layout_constraintEnd_toStartOf="@+id/wednsdayView"
            android:layout_marginEnd="2dp" app:layout_constraintBottom_toBottomOf="@+id/mondayView"
            android:background="@color/red"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/wednsdayView"
            app:layout_constraintStart_toEndOf="@+id/tuesdayView" android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@+id/tuesdayView" app:layout_constraintEnd_toStartOf="@+id/thursdayView"
            android:layout_marginEnd="2dp" app:layout_constraintBottom_toBottomOf="@+id/tuesdayView"
            android:background="@color/red"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/thursdayView"
            app:layout_constraintStart_toEndOf="@+id/wednsdayView" android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@+id/wednsdayView" app:layout_constraintEnd_toStartOf="@+id/fridayView"
            android:layout_marginEnd="2dp" app:layout_constraintBottom_toBottomOf="@+id/wednsdayView"
            android:background="@color/red"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/fridayView"
            app:layout_constraintStart_toEndOf="@+id/thursdayView" android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@+id/thursdayView" app:layout_constraintEnd_toStartOf="@+id/saturdayView"
            android:layout_marginEnd="2dp" app:layout_constraintBottom_toBottomOf="@+id/thursdayView"
            android:background="@color/red"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/saturdayView"
            app:layout_constraintStart_toEndOf="@+id/fridayView" android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@+id/fridayView" app:layout_constraintEnd_toStartOf="@+id/sundayView"
            android:layout_marginEnd="2dp" app:layout_constraintBottom_toBottomOf="@+id/fridayView"
            android:background="@color/red"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/sundayView"
            app:layout_constraintStart_toEndOf="@+id/saturdayView" android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@+id/saturdayView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="2dp" app:layout_constraintBottom_toBottomOf="@+id/saturdayView"
            android:background="@color/red"/>
</android.support.constraint.ConstraintLayout>