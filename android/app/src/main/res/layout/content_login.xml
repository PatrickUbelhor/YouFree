<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		tools:showIn="@layout/activity_login"
		tools:context=".Login" android:clickable="true">

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="textPersonName"
			android:ems="10"
			android:id="@+id/usernameText" android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/usernameNavLabel" android:hint="Username..."
			android:foregroundGravity="center_horizontal" android:layout_marginStart="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toEndOf="parent"/>
	<TextView
			android:text="Username"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:id="@+id/usernameNavLabel"
			android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="@+id/usernameText" android:layout_marginStart="8dp"/>
	<TextView
			android:text="Password"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView2"
			app:layout_constraintStart_toStartOf="@+id/passwordText" android:layout_marginStart="8dp"
			app:layout_constraintTop_toBottomOf="@+id/emailText" android:layout_marginTop="24dp"/>
	<Button
			android:text="Login"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			android:onClick="login"
			app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toBottomOf="@+id/confirmPassText"
			android:layout_marginTop="24dp"/>
	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="textPassword"
			android:ems="10"
			android:id="@+id/passwordText"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/textView2" android:hint="Password..."/>
	<TextView
			android:text="Create Account"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			android:textColor="@color/linkWiki" android:id="@+id/createAcctText"/>
	<TextView
			android:text="Confirm Password"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/confirmPassLabel" android:layout_marginTop="24dp"
			app:layout_constraintTop_toBottomOf="@+id/passwordText"
			app:layout_constraintStart_toStartOf="@+id/confirmPassText" android:layout_marginStart="8dp"/>
	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="textPassword"
			android:ems="10"
			android:id="@+id/confirmPassText"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/confirmPassLabel" android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
			app:layout_constraintStart_toStartOf="parent" android:hint="Password..."/>
	<TextView
			android:text="Email address"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/emailLabel" android:layout_marginTop="24dp"
			app:layout_constraintTop_toBottomOf="@+id/usernameText"
			app:layout_constraintStart_toStartOf="@+id/emailText"
			android:layout_marginStart="8dp"/>
	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="textEmailAddress"
			android:ems="10"
			android:id="@+id/emailText" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/emailLabel"
			android:layout_marginTop="8dp" android:hint="Email..."/>
</android.support.constraint.ConstraintLayout>