<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="displayname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/friendNameText" app:layout_constraintEnd_toStartOf="@+id/friendAvailableText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="14sp"/>
    <TextView
            android:text="yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/friendAvailableText" app:layout_constraintStart_toEndOf="@+id/friendNameText"
            app:layout_constraintEnd_toStartOf="@+id/friendNextAvailText"
            app:layout_constraintTop_toTopOf="@+id/friendNameText" app:layout_constraintBottom_toBottomOf="@+id/friendNameText"
            android:textSize="14sp"/>
    <TextView
            android:text="00:00"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/friendNextAvailText" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/friendAvailableText"
            app:layout_constraintTop_toTopOf="@+id/friendAvailableText" app:layout_constraintBottom_toBottomOf="@+id/friendAvailableText"
            android:textSize="14sp"/>
</android.support.constraint.ConstraintLayout>